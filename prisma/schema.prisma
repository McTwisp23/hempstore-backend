generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  CREATED
  AWAITING_PAYMENT
  PAID
  INVOICED
  FULFILLING
  SHIPPED
  DELIVERED
  CANCELED
}

enum PaymentStatus {
  PENDING
  AUTHORIZED
  APPROVED
  REJECTED
  REFUNDED
}

enum LightningPayoutStatus {
  NOT_STARTED
  IN_PROGRESS
  SETTLED
  FAILED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  addresses Address[]
  orders    Order[]
}

model Address {
  id        String   @id @default(cuid())
  userId    String
  label     String? // ex: "Casa"
  recipient String
  phone     String?
  street    String
  number    String
  complement String?
  district  String
  city      String
  state     String
  zip       String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Product {
  id          String   @id @default(cuid())
  sku         String   @unique
  name        String
  description String?
  priceCents  Int
  currency    String   @default("BRL")
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  inventory Inventory?
  orderItems OrderItem[]
}

model Inventory {
  productId String @id
  onHand    Int
  reserved  Int    @default(0)
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id])
}

model Order {
  id          String      @id @default(cuid())
  userId      String
  status      OrderStatus @default(CREATED)
  subtotalCents Int
  shippingCents Int
  totalCents   Int
  currency     String     @default("BRL")
  addressId    String
  notes        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  address  Address  @relation(fields: [addressId], references: [id])
  items    OrderItem[]
  payment  Payment?
  lightningPayout LightningPayout?
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  unitPriceCents Int

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Payment {
  id            String        @id @default(cuid())
  orderId       String        @unique
  provider      String        // mercadopago|mock
  providerPaymentId String?
  status        PaymentStatus @default(PENDING)
  method        String?       // pix|boleto|card
  raw           Json?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  order Order @relation(fields: [orderId], references: [id])
}

model LightningPayout {
  id            String @id @default(cuid())
  orderId       String @unique
  status        LightningPayoutStatus @default(NOT_STARTED)
  sats          Int
  invoice       String? // bolt11
  preimage      String?
  provider      String  // lnbits|btcpay|mock
  error         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id])
}
